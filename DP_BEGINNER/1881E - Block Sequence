#include <bits/stdc++.h>
using namespace std;

void solve(vector<int> &arr){
    int n = arr.size();
    vector<int> dp(n);
    //dp[n-1] = 0;
    for(int i=n-1;i>=0;i--){
        int pick = 0;
        if(i+arr[i] <= n-1){
            pick = 1+arr[i];
            if(i+1+arr[i] <= n-1){
                pick += dp[i+1+arr[i]];
            }
        }
        int skip = 0;
        if(i+1 <= n-1){
            skip += dp[i+1];
        }
        dp[i] = max(skip, pick);
    }
    cout << n-dp[0] << endl;
}

int main()
{
    int t;
    cin >> t;
    while(t--){
        int n;
        cin >> n;
        vector<int> arr(n);
        for(int i=0;i<n;i++){
            cin >> arr[i];
        }
        solve(arr);
    }
    return 0;
}
